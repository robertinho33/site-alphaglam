<h2 class="text-center mt-5">Cadastro de Produtos</h2>
<form id="form-produto">
    <label for="nome">Nome do Produto:</label>
    <input type="text" id="nome" name="nome" class="form-control" placeholder="Digite o nome do produto" required>

    <label for="categoria">Categoria:</label>
    <input type="text" id="categoria" name="categoria" class="form-control" placeholder="Digite a categoria" required>

    <label for="preco_compra">Preço de Compra:</label>
    <input type="number" id="preco_compra" name="preco_compra" class="form-control" placeholder="Digite o preço" step="0.01" required>

    <label for="quant_estoq">Quantidade em Estoque:</label>
    <input type="number" id="quant_estoq" name="quant_estoq" class="form-control" placeholder="Digite a quantidade" required>

    <label for="descricao">Descrição:</label>
    <input type="text" id="descricao" name="descricao" class="form-control" placeholder="Digite uma descrição" required>

    <label for="data_compra">Data de Compra:</label>
    <input type="date" id="data_compra" name="data_compra" class="form-control" required>

    <button type="button" class="btn btn-success" onclick="salvarProduto()">Salvar Produto</button>
</form>

<!-- Lista de Produtos -->
<h3 class="text-center mt-5">Lista de Produtos Cadastrados</h3>
<ul id="produto-list" class="list-group mt-3"></ul>

<!-- Botão para gerar PDF -->
<div class="text-center mt-5">
    <button class="btn btn-primary" onclick="gerarPDF()">Gerar PDF</button>
</div>

<script>
// Lista para armazenar os dados dos produtos
let produtos = [];

function salvarProduto() {
    const nome = document.getElementById('nome').value;
    const categoria = document.getElementById('categoria').value;
    const precoCompra = document.getElementById('preco_compra').value;
    const quantEstoq = document.getElementById('quant_estoq').value;
    const descricao = document.getElementById('descricao').value;
    const dataCompra = document.getElementById('data_compra').value;

    // Armazenando os dados na lista de produtos
    produtos.push({ nome, categoria, precoCompra, quantEstoq, descricao, dataCompra });

    // Exibindo os produtos na lista
    const lista = document.getElementById('produto-list');
    const li = document.createElement('li');
    li.classList.add('list-group-item');
    li.textContent = `${nome} - ${categoria} - R$ ${precoCompra} - ${quantEstoq} em estoque`;
    lista.appendChild(li);

    // Limpando o formulário
    document.getElementById('form-produto').reset();
}

function gerarPDF() {
    const { jsPDF } = window.jspdf;
    const doc = new jsPDF();

    doc.text('Lista de Produtos', 20, 20);

    let y = 30;
    produtos.forEach((produto, index) => {
        doc.text(`${index + 1}. ${produto.nome} - ${produto.categoria} - R$ ${produto.precoCompra} - ${produto.quantEstoq} em estoque`, 20, y);
        y += 10;
    });

    // Salvando o PDF
    doc.save('produtos.pdf');
}
</script>

